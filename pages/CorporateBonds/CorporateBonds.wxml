<view class="container">

  <view class="index_contents">
    <view style="{{company.length==0?'':'display:none;'}} font-size: 12px;color: #7E899D;margin-top:15%;text-align:center;">暂无公司债</view>
    <navigator wx:for="{{company}}" wx:key="{{company}}" class="flex-wrap"
    url="../release/release?id={{item.id}}">
      <view class="flex-hd">
        <view>发行人 : {{item.company}}
        <text wx:if="{{item.company_type!=''}}">{{item.company_type}}</text>
      
      </view>
        <image src="../../image/dingwei@2x.png"></image>
        <text>深圳</text>
      </view>
      <view class="flex-content">
        <view class="flex-left">
          <view class="flex">
            <view>评级</view>
            <view>{{item.rate}}</view>
          </view>
          <view class="flex">
            <view>收益</view>
            <view>{{item.interest}}</view>
          </view>
        </view>
        <view class="flex-right">
          <view class="flex">
            <image mode='widthFix' src="../../image/money@2x.png"></image>
            <text>总额度{{item.money}}</text>
          </view>
          <view class="flex">
            <image mode='widthFix' src="../../image/rili@2x.png"></image>
            <text>期限{{item.limit}}</text>
          </view>
        </view>
        <navigator url="../release2/release2?id={{item.id}}" class="flex-write">
          <image src="../../image/bianji@2x.png"></image>
          <text>编辑</text>
        </navigator>
      </view>
    </navigator>

