/* pages/unauthorized/unauthorized.wxss */
.unauthorized-top{
  width:100%;
  height:160px;
  background: #F2F4F7;
  border-top: 1px solid #878787;
}
.flex-head{
  width:80%;
  height:21px;
  margin-top:12px;
  margin-left:10px;
  margin-bottom:17px;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #CDB05D;
  letter-spacing: 0;
}
.flex-wrap{
  width:98%;
  height:11px;
  margin-bottom:12px;
}
.flex-wrap:last-child{
  margin-bottom:0px;
}
.flex-wrap .iconfont{
  font-size:14px;
  margin-left:13px;
  margin-right: 10px
}
.flex-wrap text{
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #7E899D;
  letter-spacing: 0;
}
/*内容*/
.unauthorized-content{
  width:100%;
  padding:0px;
  background:#fff;
}
.fotterbutton{
  padding:10px 0px 20px;
  background:#f3f3f3;
}
.unauthorized-content .content-nav{
  width:100%;
  height:20px;
}
.unauthorized-content .content-nav>text:nth-child(1){
  width:40%;
  display: inline-block;
  margin-top:13px;
  margin-left:10px;
  margin-right:15%;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #272727;
  letter-spacing: 0;
}
.unauthorized-content .content-nav>text:nth-child(2){
  display: inline-block;
  width:40%;
  margin-top:15px;
  text-align: right;
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #CC5A5A;
  letter-spacing: 0;
}
.unauthorized-content .content-nav text .iconfont{
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #CC5A5A;
  letter-spacing: 0;
}

/*三个板块*/
.content-views{
  margin:30px 8%;
  display: flex;flex-flow: row;
}
.content-views .flexs .flex-wrap{
  width:95px;
  height:42px;
  line-height: 42px;
  text-align: center;
  background: #FFF9EB;
  border: 1px solid #CDB05D;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #CDB05D;
  letter-spacing: 0;
}
.flexs{
position: relative;
}
.flexs .biaoti{
  width:25px;
  height:25px;
  position: absolute;
  top:-15px;
  left:35px;
  text-align: center;
  background:#fff;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #CDB05D;
  letter-spacing: 0;
}
.content-views .iconfont{
  height:42px;
  line-height: 42px;
  color:#737373;
  font-size:15px;
}
input{
  width:84%;
  height:45px;
  margin:0 auto;
  padding-left:17px;
  border: 1px solid #D9D9D9;
  margin-bottom:10px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #D8D8D8;
  letter-spacing: 0;
}

/*上传图片*/
.shangchuan{
  background: #FFFFFF;
  width:54.9%;
  height:96px;
  margin:23px auto;
}

/*发布*/
.fabu{
  display: inline-block;
  width:80%;
  height:49px;
  margin-left:10%;
  background: #CDB05D;
  color:#fff;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 18px;
  border-radius: 0px;
}
.fabu::after{
  border:none;
}
.dianji{
  background:#97803F;
}

/*发送*/
.yanzhengma{
  width:89%;
  margin:0 auto;
  padding:0;
  display: flex;
  flex-flow: row;
}
.yanzhengma .yanzhengma2{
  width:60%;
  margin:0;
  margin-right:5%;
  display: inline-block;
}
.fasong{
  display: inline-block;
  width:30%;
  height:45px;
  line-height: 45px;
  background: #CDB05D;
  color:#fff;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  letter-spacing: 0;
  border-radius: 0px;
  padding:0px;
}
.fasong::after{
  border:none;
}