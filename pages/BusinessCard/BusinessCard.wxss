/* pages/BusinessCard/BusinessCard.wxss */
.container{
  width:100%;
}
.container .card-head{
  width:100%;
}
.container .card-head .flex-wrap{
  width:100%;
  height:45px;
  background:#fff;
  display: flex;
  flex-flow: row;
  border-bottom:1px solid #F3F3F3;
}
.container .card-head .flex-wrap:nth-child(1){
  border-top:1px solid #f3f3f3;
}
.container .card-head .flex-wrap:nth-child(1) input{
  width:55%;
}
.container .card-head .flex-wrap:nth-child(1) view{
  width:25%;
}
.container .card-head .flex-wrap:nth-child(1) view.wsx{
  text-align: right;
  height:45px;
  line-height: 45px;
}
.container .card-head .flex-wrap image{
  width:23px;height:23px;
  margin:11px 20px 11px 14px;
  display: inline-block;
}
.container .card-head .flex-wrap input{
  width:80%;
  height:45px;
  line-height: 45px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #272727;
  letter-spacing: 0;
}
.jieshao{
  width:100%;
  height:111px;
  background:#fff;
  margin-top:10px;
  padding:10px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #272727;
  letter-spacing: 0;
}

/*上传图片*/
.shangchuan{
  background: #FFFFFF;
  border: 1px dashed #D8D8D8;
  width:54.9%;
  height:96px;
  margin:23px auto 0;
}

