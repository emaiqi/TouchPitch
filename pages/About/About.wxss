.header{
  width:100%;
  height:331px;
  position: relative;
}
.header .bg1{
  width:90%;
  height:257px;
  position: absolute;
  left:5%;
  top:50px;
  z-index:-1;
  border: 1px solid #CDB05D;
}
.header .bg2{
  width:85%;
  position: absolute;
  height:277px;
  left:7.5%;
  top:40px;
  z-index: 11;
  background: #FFFFFF;
  text-align: center;
  border: 1px solid #CDB05D;
}
.header .bg2 image{
  width:138px;
  height:57px;
  display: inline-block;
  margin:20px auto;
}
.header .bg2 .content{
  width:90%;
  margin:0 auto;
  text-align: left;
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #0E1A37;
  letter-spacing: 0;
}

.fenge{
  width:90%;
  margin:15% auto 0;
}
.fenge view:nth-child(1){
  width:100%;
  height:2px;
  background: #D9B765;
}
.fenge view:nth-child(2){
  width:35%;
  height:35px;
  line-height: 35px;
  text-align: center;
  margin:-17.5px auto 0;
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #FFFFFF;
  letter-spacing: 0;
  background: #D9B765;
}
.shiming{
  width:70%;
  display: inline-block;
  margin:10% auto 0;
  margin-left:15%;
  height:30px;
}
.flexs{
  width:85%;
  margin:10% auto;
  display:flex;
  flex-flow: row;
}
.flexs .flex-wrap{
  width:33.33%;
  text-align: center;
  display: inline-block;
}
.flexs .flex-wrap image{
  width:60px;
  height:60px;
}
.flexs .flex-wrap view:nth-child(2){
  width:100%;
  font-family: PingFangSC-Medium;
  font-size: 15px;
  font-weight: bold;
  color: #D9B765;
  letter-spacing: 0;
}
.flexs .flex-wrap view:nth-child(3){
  width:100%;
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #0E1A37;
  letter-spacing: 0;
}
/*内容*/
.contents{
  width:100%;
  margin-bottom:15px;
  display: flex;flex-flow: row;
}
.contents .dian{
  width:6px;
  margin-left:20px;
  margin-right:11px;
  display: flex;
  flex-flow: column;
}
.contents .dian text{
   display: inline-block;
    width:6px;
  height:6px;
  margin-top:6px;
   background: #CDB05D;
}
.contents .flex-wrap{
  margin-right:20px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #7E899D;
  letter-spacing: 0;
  line-height: 17px;
}